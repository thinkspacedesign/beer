<!DOCTYPE html>
<html>
	<head>
	  <title>Beer</title>
	  <%= stylesheet_link_tag    "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	  
	</head>
		<body>
			<%= render 'layouts/header' %>
			<div class="container">
				<% flash.each do |name, msg| %>
				<%= content_tag(:tag, msg, class: "alert alert-#{name}") %>
				<% end %>
			<%= yield %>

			<% render 'layouts/footer' %>
		</div>
		</body>
</html>
